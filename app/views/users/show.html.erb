<div class="container profile">
	<div class="row">
		<div class="col-md-3 col-md-offset-2">
			<%= image_tag @user.image.url, :size => "250x200", :crop => :fill %></br>
			<%= link_to "Edit My Profile", edit_user_path(current_user) %>
		</div>
		<div class="col-md-5">	
			<h1><%= @user["name"] %></h1>
			<p>Graduated from the <%= @user["program"] %> Immersive program.</p>
			<p>Currently located in <%= @user["location"] %>.</p>
			
				
			
			
			<p><%#= @user["current_status"] %></p>
			
		</div>	
	

<section id="portfolio" class="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 text-center">
                <h2>My Work</h2>
                <hr class="small">
                <div class="row">
                <% if @more_repos %>
                	<h1>Github:</h1>
                	<p><%= @user.username %></p>
						<% @more_repos.each do |repo| %>
							<%= link_to repo.html_url, repo.html_url %><br/>
						<% end %>
					<% end %>
                </div>
              </div>
                <!-- /.row (nested) -->
                <a href="#" class="btn btn-dark">View More Items</a>
            </div>
            <!-- /.col-lg-10 -->
        </div>
    <!-- /.container -->
</section>









	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h2>About Me</h2>
			<p><%= @user["description"] %></p>
		</div>
	</div>

<% if @user.linkedin_datum %>
	<div>
		<h1>Linkedin</h1>
		<p style="color: black">
			<%= @user.linkedin_datum.name %>
			<%= @user.linkedin_datum.created_at %>
			<%= @user.linkedin_datum.location %>
			<%= @user.linkedin_datum.image %>

			<%= $safety.headline %>
			
			<%= $pictures %>
			<%#= $pic_url %>
			<%#= image_tag "https://media.licdn.com/mpr/mprx/0_tBVQ93TTfb3xxxF1NkcerhG3uBO0R7F1vnkIr8l7FixpxmvgcbUEtE6YLsM" %>
			
		</p>
	</div>
<% end %>


</div>