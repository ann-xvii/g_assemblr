<h1><%= @user["email"] %>'s Edit page</h1>

<%= form_for @user do |f| %>
	
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :program %>
		<%= f.select :program, PROGRAMS %>
	</div>
	<div>
		<%= f.label :current_status %>
		<%= f.text_field :current_status %>
	</div>
	<div>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div>
		<%= f.label :image %>
		<%= f.file_field :image %>
	</div>
	<div>
		<%= f.submit "Save Changes" %>
	</div>

<% end %>