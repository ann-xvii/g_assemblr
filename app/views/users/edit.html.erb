<div class="edit-page">
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
		<h1>Edit My Page</h1>
			<%= form_for(@user, :html => { :class => 'form-vertical' }, :remote => true) do |f| %>
				
				<div class="form-group select-program">
					<%= f.select :program, PROGRAMS, class: "form-control"  %>
				</div>
				<div class="form-group">
					<%= f.label :name, class: "control-label" %>
					<%= f.text_field :name, class: "form-control"  %>
				</div>
				<div class="form-group">
					<%= f.label :current_status, class: "control-label" %>
					<%= f.text_field :current_status, class: "form-control"  %>
				</div>
				<div class="form-group">
					<%= f.label :location, class: "control-label" %>
					<%= f.text_field :location, placeholder: "ex. Los Angeles, CA", class: "form-control"  %>
				</div>
				<div class="form-group">
					<%= f.label :username, "Github Username", class: "control-label" %>
					<%= f.text_field :username, class: "form-control"  %>
				</div>
				<div class="form-group">
					<%= f.label :description, class: "control-label" %>
					<%= f.text_area :description, class: "form-control"  %>
				</div>
				<div class="form-group">
					<%= f.label :image, "Upload Profile Picture", class: "control-label" %>
					<%= f.file_field :image, class: "form-control"  %>
				</div>
				<div>
					<%= f.submit "Save Changes", class: "btn btn-danger" %>
				</div>

			<% end %>
		</div>
	</div>
</div>
</div>